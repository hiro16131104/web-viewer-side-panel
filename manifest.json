{
  "manifest_version": 3,
  "version": "1.0",
  "name": "web-viewer-side-panel",
  "description": "サイドパネルにWebビューアーを表示する拡張機能",
  "permissions": ["sidePanel"],
  "side_panel": {
    "default_path": "./public/index.html"
  },
  "background": {
    "service_worker": "./background.js"
  },
  "action": {
    "default_title": "Webビューアーを表示"
  }
}
